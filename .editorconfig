root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
end_of_line = lf
indent_style = space

[*.json]
indent_size = 2

[*.js]
indent_size = 4

[*.yml]
indent_size = 2

[*.html]
indent_size = 4

[*.jade]
indent_size = 2

[*.css]
indent_size = 4

[*.scss]
indent_size = 4

[*.ts]
indent_size = 4
